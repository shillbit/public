{
  "if": {
    "field": "type",
    "equals": "Microsoft.RecoveryServices/vaults"
  },
  "then": {
    "effect": "[parameters('effect')]",
    "details": {
      "type": "Microsoft.RecoveryServices/vaults",
      "name": "[field('name')]",
      "roleDefinitionIds": [
        "/providers/Microsoft.Authorization/roleDefinitions/5e467623-bb1f-42f4-a55d-6e525e11384b"
      ],
      "existenceCondition": {
        "allOf": [
          {
            "field": "Microsoft.RecoveryServices/vaults/publicNetworkAccess",
            "equals": "Disabled"
          },
          {
            "field": "identity.type",
            "equals": "SystemAssigned"
          }
        ]
      },
      "deployment": {
        "properties": {
          "mode": "Incremental",
          "template": {
            "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
            "contentVersion": "1.0.0.0",
            "parameters": {
              "vaultName": {
                "type": "string"
              },
              "location": {
                "type": "string"
              },
              "vaultIdentity": {
                "type": "string"
              },
              "vaultPublicNetworkAccess": {
                "type": "string"
              }
            },
            "resources": [
              {
                "type": "Microsoft.RecoveryServices/vaults",
                "apiVersion": "2022-09-30-preview",
                "name": "[parameters('vaultName')]",
                "location": "[parameters('location')]",
                "sku": {
                  "name": "Standard"
                },
                "identity": {
                  "type": "[parameters('vaultIdentity')]"
                },
                "properties": {
                  "publicNetworkAccess": "[parameters('vaultPublicNetworkAccess')]"
                }
              }
            ]
          },
          "parameters": {
            "vaultName": {
              "value": "[field('fullName')]"
            },
            "location": {
              "value": "[field('location')]"
            },
            "vaultIdentity": {
              "value": "SystemAssigned"
            },
            "vaultPublicNetworkAccess": {
              "value": "Disabled"
            }
          }
        }
      }
    }
  }
}